generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ============================================
// CORE MULTI-TENANT MODELS
// ============================================

model Tenant {
  id              String   @id @default(cuid())
  companyName     String
  slug            String   @unique
  logo            String?
  logoSize        Int      @default(50)
  address         String?
  city            String?
  state           String?
  country         String   @default("Nigeria")
  postalCode      String?
  phone           String?
  email           String?
  taxId           String?
  website         String?
  currency        String   @default("NGN")
  dateFormat      String   @default("DD/MM/YYYY")
  numberFormat    String   @default("1,234.56")
  language        String   @default("en")
  bankName        String?
  accountNumber   String?
  accountName     String?

  defaultTemplateId String?
  defaultTemplate   Template? @relation("DefaultTemplate", fields: [defaultTemplateId], references: [id])

  status          TenantStatus @default(ACTIVE)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relationships
  users           User[]
  subscription    Subscription?
  customers       Customer[]
  items           Item[]
  taxes           Tax[]
  invoices        Invoice[]
  receipts        Receipt[]
  proformaInvoices ProformaInvoice[]
  payments        Payment[]
  auditLogs       AuditLog[]

  @@index([slug])
  @@index([status])
}

enum TenantStatus {
  ACTIVE
  SUSPENDED
  DELETED
}

model User {
  id              String   @id @default(cuid())
  email           String   @unique
  emailVerified   DateTime?
  name            String?
  password        String?
  image           String?
  role            UserRole @default(TENANT_USER)

  tenantId        String?
  tenant          Tenant?  @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  resetToken      String?
  resetTokenExpiry DateTime?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  accounts        Account[]
  sessions        Session[]
  auditLogs       AuditLog[]

  @@index([tenantId])
  @@index([email])
}

enum UserRole {
  SUPER_ADMIN
  TENANT_USER
}

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// SUBSCRIPTION & PLAN MODELS
// ============================================

model Plan {
  id              String   @id @default(cuid())
  name            String   @unique
  slug            String   @unique
  description     String?  @db.Text
  price           Float
  currency        String   @default("NGN")
  billingPeriod   BillingPeriod @default(MONTHLY)
  trialDays       Int      @default(7)

  // Feature Flags
  maxInvoices     Int      @default(-1) // -1 = unlimited
  maxCustomers    Int      @default(-1)
  maxItems        Int      @default(-1)

  canUsePremiumTemplates Boolean @default(false)
  canCustomizeTemplates  Boolean @default(false)
  canUseReporting        Boolean @default(false)
  canExportData          Boolean @default(false)
  canRemoveBranding      Boolean @default(false)
  canUseWhatsApp         Boolean @default(false)
  canUseSMS              Boolean @default(false)

  isActive        Boolean  @default(true)
  isDefault       Boolean  @default(false)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  subscriptions   Subscription[]

  @@index([slug])
  @@index([isActive])
}

enum BillingPeriod {
  MONTHLY
  YEARLY
}

model Subscription {
  id              String   @id @default(cuid())
  tenantId        String   @unique
  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  planId          String
  plan            Plan     @relation(fields: [planId], references: [id])

  status          SubscriptionStatus @default(TRIALING)

  trialEndsAt     DateTime?
  currentPeriodStart DateTime
  currentPeriodEnd   DateTime
  cancelAtPeriodEnd  Boolean @default(false)
  canceledAt      DateTime?

  paystackCustomerCode String?
  paystackSubscriptionCode String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([tenantId])
  @@index([planId])
  @@index([status])
}

enum SubscriptionStatus {
  TRIALING
  ACTIVE
  PAST_DUE
  CANCELED
  INCOMPLETE
}

// ============================================
// INVOICE MANAGEMENT MODELS
// ============================================

model Customer {
  id              String   @id @default(cuid())
  tenantId        String
  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  name            String
  email           String?
  phone           String?
  whatsapp        String?
  company         String?
  address         String?
  city            String?
  state           String?
  country         String?
  postalCode      String?
  taxId           String?
  notes           String?  @db.Text

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  invoices        Invoice[]
  receipts        Receipt[]
  proformaInvoices ProformaInvoice[]

  @@index([tenantId])
  @@index([email])
}

model Item {
  id              String   @id @default(cuid())
  tenantId        String
  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  name            String
  description     String?  @db.Text
  price           Float
  unit            String?  @default("unit")
  sku             String?
  category        String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  invoiceItems    InvoiceItem[]
  proformaItems   ProformaInvoiceItem[]

  @@index([tenantId])
}

model Tax {
  id              String   @id @default(cuid())
  tenantId        String
  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  name            String
  description     String?  @db.Text
  rate            Float    // Percentage
  isDefault       Boolean  @default(false)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Legacy single-tax relationships (for backward compatibility)
  invoices        Invoice[]
  proformaInvoices ProformaInvoice[]
  
  // New multiple-tax relationships
  invoiceTaxes    InvoiceTax[]
  proformaInvoiceTaxes ProformaInvoiceTax[]

  @@index([tenantId])
}

// Junction table for multiple taxes per invoice
model InvoiceTax {
  id              String   @id @default(cuid())
  invoiceId       String
  invoice         Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  taxId           String
  tax             Tax      @relation(fields: [taxId], references: [id], onDelete: Cascade)

  taxAmount       Float    @default(0)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([invoiceId, taxId])
  @@index([invoiceId])
  @@index([taxId])
}

// Junction table for multiple taxes per proforma invoice
model ProformaInvoiceTax {
  id              String   @id @default(cuid())
  proformaId      String
  proforma        ProformaInvoice @relation(fields: [proformaId], references: [id], onDelete: Cascade)

  taxId           String
  tax             Tax      @relation(fields: [taxId], references: [id], onDelete: Cascade)

  taxAmount       Float    @default(0)

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([proformaId, taxId])
  @@index([proformaId])
  @@index([taxId])
}

model Invoice {
  id              String   @id @default(cuid())
  tenantId        String
  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  invoiceNumber   String

  customerId      String
  customer        Customer @relation(fields: [customerId], references: [id])

  issueDate       DateTime @default(now())
  dueDate         DateTime?

  subtotal        Float    @default(0)
  taxAmount       Float    @default(0)
  total           Float    @default(0)

  taxId           String?
  tax             Tax?     @relation(fields: [taxId], references: [id])
  taxEnabled      Boolean  @default(false)

  status          InvoiceStatus @default(DRAFT)
  paymentStatus   PaymentStatus @default(UNPAID)

  notes           String?  @db.Text
  terms           String?  @db.Text
  footer          String?  @db.Text

  templateId      String?
  template        Template? @relation(fields: [templateId], references: [id])

  currency        String   @default("NGN")

  sentAt          DateTime?
  viewedAt        DateTime?
  paidAt          DateTime?

  paymentLink     String?  // Paystack payment link

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  items           InvoiceItem[]
  payments        Payment[]
  auditLogs       AuditLog[]
  invoiceTaxes    InvoiceTax[]

  @@unique([tenantId, invoiceNumber])
  @@index([tenantId])
  @@index([customerId])
  @@index([status])
  @@index([paymentStatus])
}

enum InvoiceStatus {
  DRAFT
  SENT
  VIEWED
  OVERDUE
  CANCELED
}

enum PaymentStatus {
  UNPAID
  PARTIALLY_PAID
  PAID
}

model InvoiceItem {
  id              String   @id @default(cuid())
  invoiceId       String
  invoice         Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)

  itemId          String?
  item            Item?    @relation(fields: [itemId], references: [id])

  description     String
  quantity        Float    @default(1)
  price           Float
  amount          Float

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([invoiceId])
}

model Receipt {
  id              String   @id @default(cuid())
  tenantId        String
  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  receiptNumber   String

  customerId      String
  customer        Customer @relation(fields: [customerId], references: [id])

  issueDate       DateTime @default(now())
  amount          Float

  paymentMethod   String?
  reference       String?
  notes           String?  @db.Text

  templateId      String?
  template        Template? @relation(fields: [templateId], references: [id])

  currency        String   @default("NGN")

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([tenantId, receiptNumber])
  @@index([tenantId])
  @@index([customerId])
}

model ProformaInvoice {
  id              String   @id @default(cuid())
  tenantId        String
  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  proformaNumber  String

  customerId      String
  customer        Customer @relation(fields: [customerId], references: [id])

  issueDate       DateTime @default(now())
  validUntil      DateTime?

  subtotal        Float    @default(0)
  taxAmount       Float    @default(0)
  total           Float    @default(0)

  taxId           String?
  tax             Tax?     @relation(fields: [taxId], references: [id])
  taxEnabled      Boolean  @default(false)

  status          ProformaStatus @default(DRAFT)

  notes           String?  @db.Text
  terms           String?  @db.Text

  templateId      String?
  template        Template? @relation(fields: [templateId], references: [id])

  currency        String   @default("NGN")

  sentAt          DateTime?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  items           ProformaInvoiceItem[]
  proformaInvoiceTaxes ProformaInvoiceTax[]

  @@unique([tenantId, proformaNumber])
  @@index([tenantId])
  @@index([customerId])
}

enum ProformaStatus {
  DRAFT
  SENT
  ACCEPTED
  REJECTED
  EXPIRED
}

model ProformaInvoiceItem {
  id              String   @id @default(cuid())
  proformaId      String
  proforma        ProformaInvoice @relation(fields: [proformaId], references: [id], onDelete: Cascade)

  itemId          String?
  item            Item?    @relation(fields: [itemId], references: [id])

  description     String
  quantity        Float    @default(1)
  price           Float
  amount          Float

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([proformaId])
}

model Payment {
  id              String   @id @default(cuid())
  tenantId        String
  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  invoiceId       String?
  invoice         Invoice? @relation(fields: [invoiceId], references: [id])

  amount          Float
  currency        String   @default("NGN")

  paymentMethod   String
  reference       String   @unique

  paystackReference String?
  paystackStatus    String?

  status          String   @default("pending")

  paidAt          DateTime?

  metadata        Json?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([tenantId])
  @@index([invoiceId])
  @@index([reference])
}

// ============================================
// TEMPLATE MODELS
// ============================================

model Template {
  id              String   @id @default(cuid())
  name            String
  slug            String   @unique
  description     String?  @db.Text
  thumbnail       String?

  isPremium       Boolean  @default(false)
  isActive        Boolean  @default(true)

  // Template configuration as JSON
  config          Json

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  invoices        Invoice[]
  receipts        Receipt[]
  proformaInvoices ProformaInvoice[]
  defaultForTenants Tenant[] @relation("DefaultTemplate")

  @@index([slug])
  @@index([isPremium])
}

// ============================================
// SYSTEM CONFIGURATION
// ============================================

model SystemConfig {
  id              String   @id @default(cuid())
  key             String   @unique
  value           String   @db.Text
  type            String   @default("string") // string, number, boolean, json
  description     String?  @db.Text

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([key])
}

// ============================================
// AUDIT LOG
// ============================================

model AuditLog {
  id              String   @id @default(cuid())
  tenantId        String?
  tenant          Tenant?  @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  userId          String?
  user            User?    @relation(fields: [userId], references: [id])

  action          String
  entityType      String
  entityId        String?

  invoiceId       String?
  invoice         Invoice? @relation(fields: [invoiceId], references: [id])

  metadata        Json?
  ipAddress       String?
  userAgent       String?  @db.Text

  createdAt       DateTime @default(now())

  @@index([tenantId])
  @@index([userId])
  @@index([entityType, entityId])
  @@index([createdAt])
}
