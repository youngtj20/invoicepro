# Production Environment Variables for InvoicePro
# Copy this to your production server and update with actual values

# Database
DATABASE_URL="mysql://username:password@host:3306/invoice_saas_production"

# NextAuth
NEXTAUTH_URL="https://invoicepro.com.ng"
NEXTAUTH_SECRET="generate-a-strong-secret-key-use-openssl-rand-base64-32"

# Google OAuth
GOOGLE_CLIENT_ID="your-production-client-id"
GOOGLE_CLIENT_SECRET="your-production-client-secret"

# Paystack (Use production keys)
PAYSTACK_PUBLIC_KEY="pk_live_your_production_public_key"
PAYSTACK_SECRET_KEY="sk_live_your_production_secret_key"
PAYSTACK_WEBHOOK_SECRET="your_webhook_secret"

# Email
EMAIL_FROM="noreply@invoicepro.com.ng"
EMAIL_SERVER_HOST="smtp.sendgrid.net"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="apikey"
EMAIL_SERVER_PASSWORD="your_sendgrid_api_key"

# SMS
SMS_PROVIDER="termii"
TERMII_API_KEY="your_production_termii_api_key"
TERMII_SENDER_ID="InvoicePro"

# WhatsApp Business API
WHATSAPP_API_ENABLED="true"
WHATSAPP_API_URL="your_production_whatsapp_api_url"
WHATSAPP_API_TOKEN="your_production_token"
WHATSAPP_API_NUMBER="your_whatsapp_business_number"
WHATSAPP_API_TIMEOUT="30"
WHATSAPP_API_RETRY_COUNT="3"

# Application
APP_URL="https://invoicepro.com.ng"
APP_NAME="InvoicePro"

# Trial Period (days)
DEFAULT_TRIAL_DAYS="7"

# Important Notes:
# 1. Never commit this file to Git
# 2. Use strong, unique secrets for production
# 3. Enable SSL/HTTPS for all production URLs
# 4. Use production API keys (not test keys)
# 5. Ensure database has proper backups
# 6. Set up monitoring and logging
